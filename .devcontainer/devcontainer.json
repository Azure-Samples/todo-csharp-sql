{
    "name": "Azure Dev CLI",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "16-bullseye"
        }
    },
    "features": {
        "github-cli": "latest",
        "azure-cli": "latest",
        "python": "latest",
        "dotnet": "latest",
        "docker-from-docker": "latest"
    },
    "remoteEnv": {
        "AZURE_DEV_CLI_PATH": "/usr/local/share/npm-global/bin/azd"
    },
    "extensions": [
        "/extensions/azure-dev.vsix",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-bicep",
        "eg2.vscode-npm-script",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-node-azure-pack",
        "ms-vscode.js-debug",
        "ms-azuretools.vscode-azurefunctions",
        "ms-dotnettools.csharp",
        "esbenp.prettier-vscode",
        "ms-dotnettools.vscode-dotnet-runtime"
    ],
    "forwardPorts": [
        3000,
        3100
    ],
    "postCreateCommand": "npm install -g https://aka.ms/azure-dev/npm && az extension add -n containerapp -y",
    "remoteUser": "node"
}